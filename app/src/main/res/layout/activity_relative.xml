<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

<RelativeLayout
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/boxLeft1"
        android:layout_width="200dp"

        android:layout_height="60mm"

        android:background="@color/teal_200"
        />

    <RelativeLayout
        android:id="@+id/boxLeft2"
        android:layout_width="200dp"
        android:layout_height="60mm"
        android:layout_below="@id/boxLeft1"
        android:background="@color/pink"
        />
    <RelativeLayout
        android:id="@+id/boxRight1"
        android:layout_width="200dp"
        android:layout_height="40mm"
        android:layout_alignParentEnd="true"
        android:background="@color/red"
        />
    <RelativeLayout
        android:id="@+id/boxRight2"
        android:layout_width="200dp"
        android:layout_height="40mm"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/boxRight1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:id="@+id/boxRight3"
        android:layout_width="200dp"
        android:layout_height="40mm"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/boxRight2"
        android:background="@color/purple_500"
        />
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:value="1"
        android:valueFrom="0"
        android:valueTo="1"
        />

</RelativeLayout>



    </RelativeLayout>